<?xml version="1.0"?>
<config>
	<sections>
		<slideshow translate="label" module="slideshow">
			<label>Slideshow Configuration</label>
			<tab>general</tab>
			<sort_order>1610</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<config translate="label">
					<label>Slideshow Config</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<label>Enable Slideshow</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</enabled>
						<show>
							<label>Show Slideshow on</label>
							<frontend_type>select</frontend_type>
							<source_model>slideshow/config_show</source_model>
							<comment>Select pages to show slideshow</comment>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</show>
					</fields>
				</config>
				<athlete translate="label">
					<label>Athlete Slider Config</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<allowWrap>
							<label>Wrap Slides</label>
							<frontend_type>select</frontend_type>
							<comment>Loop the slider after the last slide.</comment>
							<source_model>slideshow/config_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</allowWrap>
						<autoHeight>
							<label>Auto Height</label>
							<frontend_type>select</frontend_type>
							<comment>Animate slider height automatically</comment>
							<source_model>slideshow/config_autoheight</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</autoHeight>
						<easing>
							<label>Easing Animation</label>
							<frontend_type>select</frontend_type>
							<comment>Name of the easing function to use for animations.</comment>
							<source_model>slideshow/config_easing</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</easing>
						<fx>
							<label>Transition Effect</label>
							<frontend_type>select</frontend_type>
							<comment>The name of the slideshow transition to use</comment>
							<source_model>slideshow/config_effect</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</fx>
						<speed>
							<label>Transition Speed</label>
							<frontend_type>text</frontend_type>
							<comment>The speed of the transition effect in milliseconds.</comment>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</speed>
						<sync>
							<label>Animation Sync</label>
							<frontend_type>select</frontend_type>
							<source_model>slideshow/config_yesno</source_model>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</sync>
						<timeout>
							<label>Slide Timeout</label>
							<frontend_type>text</frontend_type>
							<comment>The time between slide transitions in milliseconds.</comment>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</timeout>
						<pauseOnHover>
							<label>Pause on Hover</label>
							<frontend_type>select</frontend_type>
							<comment>If true an auto-running slideshow will be paused while the mouse is over the slideshow.</comment>
							<source_model>slideshow/config_yesno</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</pauseOnHover>
						<timeline>
							<label>Show Timeline</label>
							<frontend_type>select</frontend_type>
							<source_model>slideshow/config_yesno</source_model>
							<sort_order>110</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</timeline>
						<responsive_banners>
							<label>Show Banner on Devices</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>120</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</responsive_banners>
					</fields>
				</athlete>
			</groups>
		</slideshow>
	</sections>
</config>
